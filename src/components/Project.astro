---
import Icon from "@components/base/Icon";
import ImgOverlay from "@components/ImgOverlay.astro";

type Props = {
  title: string;
  titleShort: string;
  description: string;
  category: string;
  src: string;
  alt: string;
  tech: string[];
};

const { title, titleShort, category, src, alt } = Astro.props;
const link = `/project/${titleShort}`;
---

<a href={link} class="w-96">
  <div class="flex flex-col max-w-full lg:flex-[0_0_31%]">
    <div class="relative cursor-pointer md:h-[20rem] mb-4">
      <div class="flex gap-6 absolute top-6 right-6">
        <Icon
          icon="github"
          width="w-4 sm:w-5 cursor-pointer"
          projectName={titleShort}
          client:only
        />
        <Icon
          icon="external"
          width="w-4 sm:w-5 cursor-pointer"
          projectName={titleShort}
          client:only
        />
      </div>
      <div class="dark:bg-dark-overlay-primary absolute inset-0"></div>
      <ImgOverlay titleShort={titleShort} src={src} alt={alt} />
    </div>
    <div class="project-title">
      <h5 class="secondary">{category}</h5>
      <h3 class="pt-1">{title}</h3>
    </div>
  </div>
</a>
