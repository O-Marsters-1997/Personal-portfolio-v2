{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@*": ["./src/*"],
      "@screens": ["./src/screens/*"],
      "@components": ["./src/components/*"],
      "@content": ["./src/content/*"],
      "@layouts": ["./src/layouts/*"],
      "@pages": ["./src/pages/*"],
      "@utils": ["./src/utils/*"],
      "@assets": ["./src/assets/*"],
      "@styles": ["./src/styles/*"],
      "@context": ["./src/context/*"],
      "@types": ["src/types/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  },
  "include": ["**/*.astro", "**/*.ts", "**/*.tsx"]
}
